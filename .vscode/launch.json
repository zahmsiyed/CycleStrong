{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: FastAPI (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/apps/backend/.env"
    }
  ]
}
